{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",          
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,   
    "allowImportingTsExtensions": false  
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"] 
}